OCR_APP_NAME=Sharifsetup-OCR
OCR_MODEL_NAME=Sharifsetup-OCR
OCR_VLLM_MODEL_ID=Sharifsetup-OCR

# Local model artifact directory.
OCR_MODEL_STORE_DIR=./model_store
OCR_REQUIRE_LOCAL_MODEL_STORE=true
OCR_AUTO_DOWNLOAD_MODEL_STORE=false
OCR_MODEL_FORCE_DOWNLOAD=false

# OCR model repository to download once during bootstrap.
OCR_MODEL_REPO_ID=allenai/olmOCR-2-7B-1025-FP8
# OCR_MODEL_FILENAME=

# Optional for gated/private models. If unset, HF_TOKEN is also accepted.
# OCR_HF_TOKEN=hf_xxx

# OCR vLLM client settings.
OCR_VLLM_BASE_URL=http://127.0.0.1:8001
OCR_VLLM_API_KEY=EMPTY
OCR_VLLM_TIMEOUT_SECONDS=120
OCR_VLLM_STARTUP_TIMEOUT_SECONDS=600

# Local OCR vLLM server settings.
OCR_VLLM_HOST=0.0.0.0
OCR_VLLM_PORT=8001
OCR_VLLM_DTYPE=bfloat16
OCR_VLLM_MAX_MODEL_LEN=8192
OCR_VLLM_TENSOR_PARALLEL_SIZE=1
OCR_VLLM_GPU_MEMORY_UTILIZATION=0.90
OCR_VLLM_TRUST_REMOTE_CODE=false
OCR_VLLM_ENFORCE_EAGER=false
OCR_VLLM_DISABLE_MM_PREPROCESSOR_CACHE=false
# OCR_VLLM_ADDITIONAL_ARGS=--disable-log-requests

# Startup probes.
OCR_STARTUP_COMPAT_CHECK=true

# OCR generation parameters.
OCR_TEMPERATURE=0.0
OCR_TOP_K=1
OCR_TOP_P=1.0
OCR_MAX_TOKENS=4096
OCR_INFERENCE_TIMEOUT_SECONDS=120

OCR_MAX_UPLOAD_MEGABYTES=15

# Logging behavior:
# true  -> DEBUG (all levels)
# false -> ERROR only
OCR_VERBOSE_LOGS=false

# Kept for backward compatibility; OCR_VERBOSE_LOGS controls runtime level.
OCR_LOG_LEVEL=INFO

# Optional hard offline mode hints for dependent libraries.
HF_HUB_OFFLINE=1
TRANSFORMERS_OFFLINE=1
